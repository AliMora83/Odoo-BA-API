<odoo>
    <record id="view_move_form_inherit_ba" model="ir.ui.view">
        <field name="name">account.move.form.inherit.ba</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='other_info']" position="inside">
                <group string="Bridging Africa">
                    <field name="ba_invoice_id" readonly="1"/>
                    <field name="ba_status" readonly="1"/>
                    <field name="ba_synced" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

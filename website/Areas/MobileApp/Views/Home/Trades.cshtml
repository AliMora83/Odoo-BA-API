
@{
    ViewBag.Title = "Trades";
    Layout = "~/Areas/MobileApp/Views/Shared/_LayoutMain.cshtml";
}


<div class="page-content">
    <div class="page-title page-title-small">
        <h2><a href="/MobileApp/Home/MainHome"><i class="fa fa-arrow-left"></i></a>Tradesperson</h2>
    </div>
    <div class="card header-card shape-rounded" data-card-height="180">
        <div class="card-overlay bg-ba-theme opacity-95"></div>
        <div class="card-overlay dark-mode-tint"></div>
        <div class="card-bg"></div>
    </div>
    <div class="card card-style mt-4">
        <div class="content text-center">
            <h2>Tradesperson</h2>
        </div>
        <div class="divider divider-small mb-3 bg-ba-theme"></div>
        <div class="content">
            <h4 class="mb-3 text-center">Tradesperson features</h4>
            <ul class="mt-3 font-700 font-16">
                <li>Dedicated business profile page</li>
                <li>Automated review collection</li>
                <li>Access to our Printed Directory</li>
                <li>Linked to major Hardware Stores</li>
            </ul>
            <a href="/TradespersonApp/Home/Index" class="btn btn-full btn-m shadow-l rounded-s bg-ba-theme text-uppercase font-900 mt-4 m-2">Join Now</a>
        </div>
    </div>
    <div class="card card-style mt-4">
        <div class="content text-center">
            <h2>Workflow</h2>
        </div>
        <div class="divider divider-small mb-3 bg-ba-theme"></div>
        <div class="content">
            <div class="d-flex mb-4 pb-3">
                <div>
                    <i class="fa fa-sign-in-alt color-green2-dark fa-3x pt-3 icon-size"></i>
                </div>
                <div>
                    <h5 class="font-16 font-600">SignUp for Free</h5>
                    <p>
                        You can register your profile for free on our platform.
                    </p>
                </div>
            </div>
            <div class="d-flex mb-4 pb-3">
                <div>
                    <i class="fa fa-list-alt color-blue2-dark fa-3x pt-3 icon-size"></i>
                </div>
                <div>
                    <h5 class="font-16 font-600">Get listed on platform</h5>
                    <p>
                        Get listed your profile for free on bridging africa platform.
                    </p>
                </div>
            </div>
            <div class="d-flex mb-2">
                <div>
                    <i class="fa fa-user-check color-green1-dark fa-3x pt-3 icon-size"></i>
                </div>
                <div>
                    <h5 class="font-16 font-600">Your trade</h5>
                    <p>
                        Select your trade. Show off your work, skills and reviews and get regular job requests.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


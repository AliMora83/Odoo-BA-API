<!DOCTYPE html>

<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
    <title>Bridging Africa</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900|Roboto:300,300i,400,400i,500,500i,700,700i,900,900i&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/AppAssets/styles/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/AppAssets/fonts/css/fontawesome-all.min.css">
    <link rel="manifest" href="~/AppAssets/_manifest.json" data-pwa-version="set_in_manifest_and_pwa_js">
    <link rel="apple-touch-icon" sizes="180x180" href="">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <link rel="icon" type="image/png" href="~/AppAssets/app/icons/favicon.png">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <link href="~/AppAssets/src/jquery.mloading.css" rel="stylesheet" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script src="~/AppAssets/scripts/dbscript.js"></script>
    <script>
        $(document).ready(function () {           
            localStorage.setItem("Isfirst", "0");
        });
        function getUrlVars() {
            var vars = [], hash;
            var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
            for (var i = 0; i < hashes.length; i++) {
                hash = hashes[i].split('=');
                vars.push(hash[0]);
                vars[hash[0]] = hash[1];
            }
            return vars;

        }
    </script>

</head>

<body class="theme-light" data-highlight="blue2">
    <div id="preloader">
        <div class="spinner-border color-highlight" role="status">
        </div>
    </div>
    <div id="page">
        <div id="footer-bar" class="footer-bar-5">
            <a href="/MobileApp/Home/MainHome" class="@(ViewBag.Current == "MainHome" ? "active-nav" : "")">
                <i class="fa fa-home" data-feather-size="21" data-feather-color="blue2-dark" data-feather-bg="blue2-fade-light"></i>
                <span>Home</span>
            </a>
            <a href="/MobileApp/Home/Categories" class="@(ViewBag.Current == "Categories" ? "active-nav" : "")">
                <i class="fa fa-list" data-feather-size="21" data-feather-color="red2-dark" data-feather-bg="red2-fade-light"></i>
                <span>Services</span>
            </a>
            <a href="/MobileApp/Home/Trades" class="@(ViewBag.Current == "Trades" ? "active-nav" : "")">
                <img src="~/AppAssets/images/trades_icon.ico" style="width: 22px;margin-bottom: 4px;"/>
                @*<i class="fa fa-user-astronaut" data-feather-size="21" data-feather-color="red2-dark" data-feather-bg="red2-fade-light"></i>*@
                <span>Trades</span>
            </a>
            <a href="/MobileApp/Home/AccountCheck" class="@(ViewBag.Current == "Account" ? "active-nav" : "")">
                <i class="fa fa-user" data-feather-size="21" data-feather-color="gray2-dark" data-feather-bg="gray2-fade-light"></i>
                <span>My Account</span>
            </a>
        </div>

        @RenderBody()

        <div id="SuccessMessage" class="menu menu-box-bottom menu-box-detached rounded-m" data-menu-height="280" data-menu-effect="menu-over">
            <h1 class="text-center mt-4"><i class="fa fa-3x fa-check-circle color-ba-theme"></i></h1>
            <h1 id="SuccessHeader" class="text-center mt-3 text-uppercase font-900"></h1>
            <p id="SuccessDetail" class="boxed-text-l"></p>
            <a id="BtnSuccess" href="#" class="close-menu btn btn-m btn-center-m button-s shadow-l rounded-s text-uppercase font-900 bg-ba-theme">OK</a>
        </div>

        <div id="ErrorMessage" class="menu menu-box-bottom menu-box-detached rounded-m " data-menu-height="280" data-menu-effect="menu-over">
            <h1 class="text-center mt-4"><i class="fa fa-3x fa-times color-red2-dark"></i></h1>
            <h1 class="text-center mt-3 text-uppercase font-900" id="ErrorHeader"></h1>
            <p class="boxed-text-l" id="ErrorDetails"></p>
            <a href="#" id="BtnFail" class="close-menu btn btn-m btn-center-m button-s shadow-l rounded-s text-uppercase font-900 bg-red1-light">Go Back</a>
        </div>

        <div id="SuccessToast" class="toast toast-tiny toast-bottom bg-green1-dark" data-delay="3000" data-autohide="true">
            <i class="fa fa-check mr-3"></i>Confirmed
        </div>
        <div id="ErrorToast" class="toast toast-tiny toast-bottom bg-red2-dark" data-delay="3000" data-autohide="true">
            <i class="fa fa-times mr-3"></i>Error Occured
        </div>
        <div class="footer" data-menu-load="menu-footer.html"></div>
    </div>

    @*<script type="text/javascript" src="~/AppAssets/scripts/jquery.js"></script>*@
    <script type="text/javascript" src="~/AppAssets/scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/AppAssets/scripts/custom.js"></script>
    <script src="~/AppAssets/src/jquery.mloading.js"></script>
</body>
</html>

@using PagedList.Mvc;
@using PagedList;
@model IPagedList<BridgingAfrica.EnquiryTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>All Contact Us Enquiries<small>(View, Delete Enquiry)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All contact us enquiries (@Model.TotalItemCount of <span style="color:green"> @Model.Count </span> Showing)</h3>
                </div>
                <div class="box-body">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Email ID
                                    </th>
                                    <th>
                                        Contact Number
                                    </th>
                                    <th>
                                        Message
                                    </th>
                                    <th>
                                        Create Date
                                    </th>

                                    <th>
                                        Action
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmailID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Message)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateDate)
                                        </td>

                                        <td>

                                            <a data-toggle="modal" data-target="#modal-delete-@item.Id" class="btn btn-xs btn-danger">Delete <i class="fa fa-trash-o"></i></a>
                                            <div class="modal fade text-center" id="modal-delete-@item.Id">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            <h4 class="modal-title">Customer Queries item  Delete Confirmation</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <h4>Are you Sure you want to delete Customer Queries item</h4>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                            <a class="btn btn-danger pull-right" href="@Url.Action("Delete", "ContactUs", new { id = item.Id })">Delete</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                }

                            </table>

                            @Html.PagedListPager(Model, Page => Url.Action("Index", "ContactUs", new { Page }))
                        </div>
                    }
                    else
                    {
                        <h4 class="box-title">Record Not Found</h4>
                    }

                </div>
            </div>
        </div>
    </div>

</section>
@model BridgingAfrica.InformationTbl
@{
    ViewBag.Title = "Manage Content";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/AdminAssets/tinymce/jscripts/tiny_mce/tiny_mce.js" type="text/javascript"></script>
<script type="text/javascript" src="~/AdminAssets/tinymce/tiny.js"></script>
<section class="content-header">
    <h1>Edit Pages Content<small>(Edit Pages Content)</small></h1>
</section>
<section class="content">
    @using (Html.BeginForm("Index", "ManageContent", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.IsActive)

        <div class="row">
            <div class="col-md-12">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                }
                @if (TempData["FailMessage"] != null)
                {
                    <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
                }
                <div class="box box-warning">
                    <div class="box-body">
                        <div class="form-group">
                            <label>About Us</label>
                            <textarea id="AboutUs" name="AboutUs" class="form-control" style="height:400px">@Model.AboutUs</textarea>
                        </div>

                        <div class="form-group">
                            <label>Privacy Policy</label>
                            <textarea id="PrivacyPolicy" name="PrivacyPolicy" class="form-control" style="height:400px">@Model.PrivacyPolicy</textarea>
                        </div>

                        <div class="form-group">
                            <label>Terms of use</label>
                            <textarea id="TermsOfUse" name="TermsOfUse" class="form-control" style="height:400px">@Model.TermsOfUse</textarea>
                        </div>

                        <div class="box-footer">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</section>


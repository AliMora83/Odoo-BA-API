@model IEnumerable<BridgingAfrica.CategoryRequestTbl>

@{
    ViewBag.Title = "Add Category Request";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>Category Add Request<small>(View, Delete Category Request)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All Category Add Request (Total <span style="color:green">@Model.Count() </span> record found)</h3>
                </div>
                <div class="box-body">
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        Requester Name
                                    </th>
                                    <th>
                                        Requester Type
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Message
                                    </th>
                                    <th>
                                        Created Date
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RequesterName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RequesterType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Message)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateDate)
                                        </td>
                                        <td>
                                            <a data-toggle="modal" data-target="#modal-delete-@item.Id" class="btn btn-xs btn-danger">Delete <i class="fa fa-trash-o"></i></a>
                                            <div class="modal fade text-center" id="modal-delete-@item.Id">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            <h4 class="modal-title">Record Delete Confirmation</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <h4>Are you Sure you want to delete this record?</h4>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                            <a class="btn btn-danger pull-right" href="@Url.Action("Delete", "CategoryRequest", new { id = item.Id })">Delete</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                }

                            </table>
                        </div>
                    }
                    else
                    {
                        <h4 class="box-title">Record Not Found</h4>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

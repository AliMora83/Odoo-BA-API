@using PagedList.Mvc;
@using PagedList;
@model IPagedList<BridgingAfrica.ServiceTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <h1>All Services<small>(Add, View, Edit, Delete Services)</small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12 mb5">
            <a href="/Admin/ManageServices/Create/" class="btn btn-dropbox">Add New</a>
        </div>
        <div class="col-md-12">
            @if (TempData["FailMessage"] != null)
            {
                <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">All Services (Showing @Model.Count of @Model.TotalItemCount)</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        @using (Html.BeginForm("Index", "ManageServices", FormMethod.Get))
                        {
                            @Html.DropDownList("ServiceID", null, "Search Service", htmlAttributes: new { @class = "form-control chosen-select", onchange = "this.form.submit()" })
                        }
                    </div>
                    @if (Model.Count() > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Subcategory
                                    </th>
                                    <th>
                                        Service Name
                                    </th>
                                    <th>
                                        Sort Order
                                    </th>
                                    <th>
                                        Created Date
                                    </th>
                                    <th>
                                        Modified Date
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.CategoryTbl.CategoryName
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubCategoryTbl.SubCategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ServiceName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ServiceOrder)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModifiedDate)
                                        </td>
                                        <td>
                                            <a class="btn btn-xs btn-warning" href="/Admin/ManageServices/Edit/@item.Id">Edit <i class="fa fa-edit"></i></a>
                                            <a data-toggle="modal" data-target="#modal-delete-@item.Id" class="btn btn-xs btn-danger">Delete <i class="fa fa-trash-o"></i></a>
                                            <div class="modal fade text-center" id="modal-delete-@item.Id">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            <h4 class="modal-title">Record Delete Confirmation</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <h4>Are you sure you want to delete this record? By deleting this Tradesperson also affected</h4>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                            <a class="btn btn-danger pull-right" href="@Url.Action("Delete", "ManageServices", new { id = item.Id })">Delete</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div><br />
                                            <a data-toggle="modal" data-target="#modal-details-@item.Id" class="btn btn-xs btn-twitter">Details <i class="fa fa-list"></i></a>
                                            <div class="modal fade text-center" id="modal-details-@item.Id">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            <h3 class="modal-title">Service Details</h3>
                                                        </div>
                                                        <div class="modal-body">
                                                            <table class="table table-bordered" style="text-align:left;">
                                                                <tr>
                                                                    <td>
                                                                        Featured
                                                                    </td>
                                                                    <td>
                                                                        @if (item.IsFeatured == true)
                                                                        {
                                                                            <span>Yes</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span>No</span>
                                                                        }

                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td>
                                                                        Popular
                                                                    </td>
                                                                    <td>
                                                                        @if (item.IsPopular == true)
                                                                        {
                                                                            <span>Yes</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span>No</span>
                                                                        }
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td>
                                                                        Description
                                                                    </td>
                                                                    <td>
                                                                        @item.Description
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                }

                            </table>
                            @Html.PagedListPager(Model, Page => Url.Action("Index", "ManageServices", new { Page }))
                        </div>
                    }
                    else
                    {
                        <h4 class="box-title">Record Not Found</h4>
                    }

                </div>
            </div>
        </div>
    </div>    
</section>
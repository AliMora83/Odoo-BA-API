@model IEnumerable<BridgingAfrica.ProviderAccreditationsTbl>
@{
    ViewBag.Title = "Manage Accreditation";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<script>
    function deleteitem(sid) {
        $.ajax({
            url: "/api/ProviderApi/DeleteAccreditations?sid=" + sid,
            type: 'POST',
            contentType: 'application/json',
            beforeSend: function () {
                $("body").mLoading();
            },
            success: function (data) {
                $("body").mLoading('hide');
                if (data.Status == "Success") {
                    alert(data.Message);
                    window.location = "/TradespersonAccount/ManageAccreditation";
                }
                else {
                    alert(data.Message);
                }
            },
            error: function (data) {
                alert(data.Message);
                $("body").mLoading('hide');
            }
        });
    }
</script>
<main class="main-wrapper">
    <!-- Start Breadcrumb Area  -->
    <div class="axil-breadcrumb-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-8">
                    <div class="inner">
                        <ul class="axil-breadcrumb">
                            <li class="axil-breadcrumb-item"><a href="/">Home</a></li>
                            <li class="separator"></li>
                            <li class="axil-breadcrumb-item active" aria-current="page">Your Accreditations</li>
                        </ul>
                        <h1 class="title">Your Accreditations</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4">
                    <div class="inner">
                        <div class="bradcrumb-thumb">
                            <img src="/assets/images/logo/logoheader.png" alt="Image" style="height:140px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="axil-dashboard-area mb--80">
        <div class="container">
            <div class="row align-items-center">
                <div class="axil-dashboard-area mt--30">
                    <div class="container">
                        <div class="axil-dashboard-warp">
                            <div class="axil-dashboard-author">
                                <div class="media">
                                    <div class="media-body">
                                        <h5 class="title mb-0">Hello @Session["ProviderName"]</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @Html.Action("_AccountDetail", "TradespersonAccount")
                                <div class="col-xl-9 col-md-8">
                                    @if (TempData["FailMessage"] != null)
                                    {
                                        <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
                                    }
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                                    }
                                    <a class="axil-btn p-3 mb-3 btn-bg-primary" href="/TradespersonAccount/AddAccreditation" style="width:150px;"><i class="fa fa-plus"></i> New Request</a>
                                    @if (Model.Count() > 0)
                                    {
                                        <div class="axil-dashboard-order">
                                            <div class="table-responsive" style="border: 1px solid #C0C0C0; border-radius: 5px;">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Logo</th>
                                                            <th scope="col">Accreditation Name</th>
                                                            <th scope="col">Status</th>
                                                            <th scope="col">Create Date</th>
                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tbody>
                                                            <tr>
                                                                <td><img src="@item.AccreditationTbl.Logo" class="img-thumbnail" style="height:50px;" /></td>
                                                                <td>@item.AccreditationTbl.AccreditationName</td>
                                                                <td style="color:@item.StatusTbl.ColorCode">@item.StatusTbl.StatusName</td>
                                                                <td>@item.CreatedDate.ToString("dd MMM yyyy")</td>
                                                                <td>
                                                                    <button data-bs-toggle="modal" data-bs-target="#searchModal-@item.Id" class='axil-btn view-btn'>Delete</button>
                                                                    <div class="modal fade" id="searchModal-@item.Id" tabindex="-1">
                                                                        <div class="modal-dialog">
                                                                            <!-- Modal content-->
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <h5 class="modal-title text-center">Delete Confirmation</h5>
                                                                                    <button type="button" style="width:20px" class="close" data-bs-dismiss="modal">
                                                                                        <i class="fa fa-times"></i>
                                                                                    </button>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <h5 class="mt-5 mb-5 text-center">Are you sure you want to delete this Accreditation?</h5>
                                                                                </div>
                                                                                <div class="modal-footer">
                                                                                    <button onclick="deleteitem(@item.Id)" class="axil-btn p-3 mb-3 btn-bg-primary" style="width:150px">Delete</button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <h4>No Record Found</h4>
                                    }                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

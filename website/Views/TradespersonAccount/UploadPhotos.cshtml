
@{
    ViewBag.Title = "UploadPhotos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    BridgingAfricaDBEntities db = new BridgingAfricaDBEntities();

    int custID = int.Parse(Session["P_UserID"].ToString());
    var Photos = db.ProviderImagesTbls.Where(p => p.ProviderID == custID).Select(i => new { i.Id, i.ImageUrl }).ToList();
}
<script>
    function readURL(input, img) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $(img).attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
<script>        
    function deleteImage(id) {
        $.ajax({
            url: "/api/ProviderApi/DeleteImage?id=" + id,
            type: 'POST',
            contentType: 'application/json',
            beforeSend: function () {
                $("body").mLoading();
            },
            success: function (data) {
                $("body").mLoading('hide');
                if (data.Status == "Success") {
                    alert(data.Message);
                    window.location = "/TradespersonAccount/UploadPhotos";
                }
                else {
                    alert(data.Message);
                }
            },
            error: function (data) {
                alert(data.Message);
                $("body").mLoading('hide');
            }
        });
    }
</script>
<main class="main-wrapper">
    <!-- Start Breadcrumb Area  -->
    <div class="axil-breadcrumb-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-8">
                    <div class="inner">
                        <ul class="axil-breadcrumb">
                            <li class="axil-breadcrumb-item"><a href="/">Home</a></li>
                            <li class="separator"></li>
                            <li class="axil-breadcrumb-item active" aria-current="page">Upload Photos</li>
                        </ul>
                        <h1 class="title">Upload Photos</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4">
                    <div class="inner">
                        <div class="bradcrumb-thumb">
                            <img src="/assets/images/logo/logoheader.png" alt="Image" style="height:140px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="axil-dashboard-area mb--80">
        <div class="container">
            <div class="row align-items-center">
                <div class="axil-dashboard-area mt--30">
                    <div class="container">
                        <div class="axil-dashboard-warp">
                            <div class="axil-dashboard-author">
                                <div class="media">
                                    <div class="media-body">
                                        <h5 class="title mb-0">Hello @Session["ProviderName"]</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @Html.Action("_AccountDetail", "TradespersonAccount")
                                <div class="col-xl-9 col-md-8">
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                                    }
                                    @if (TempData["FailMessage"] != null)
                                    {
                                        <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
                                    }
                                    <form id="uploadForm" action="/TradespersonAccount/UploadPhotos" method="post" enctype="multipart/form-data">
                                        <input id="ProviderID" name="ProviderID" value="@custID" type="hidden" />
                                        <div class="boxed-text-xl" style="margin-bottom: 55px;">
                                            <label>Upload photos for your profile. (Maximum 5 Photos)</label>
                                            <div class="row">
                                                <div class="col-8">
                                                    <input id="imageFile" name="ImageUrl" onchange="readURL(this,'#imgpreview');" type="file" accept="jpg,.png,.jpeg" required />
                                                    <button type="submit" class="axil-btn p-3 mt-5 mb-3 btn-bg-primary">Upload</button>
                                                </div>
                                                <div class="col-4">
                                                    <img id="imgpreview" src="/assets/images/NoImage.png" style="width:130px;height:130px;margin-top:0px!important">
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row">
                                        @foreach (var item in Photos)
                                        {
                                            <div class="col-xl-3 col-md-3 mb-4 text-center">
                                                <img src="@item.ImageUrl" class="img-thumbnail" style="height:150px;width: 100%;" />
                                                <button data-bs-toggle="modal" data-bs-target="#searchModal-@item.Id" onclick="setID(@item.Id)" style="width:30px;margin:auto;text-align:center;padding: 5px;" class="axil-btn btn-bg-primary">
                                                    <i style="margin: 0px;" class="fa fa-trash"></i>
                                                </button>
                                                <div class="modal fade" id="searchModal-@item.Id" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title text-center">Delete Confirmation</h5>
                                                                <button type="button" style="width:20px" class="close" data-bs-dismiss="modal">
                                                                    <i class="fa fa-times"></i>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <h5 class="mt-5 mb-5">Are you sure you want to delete this image?</h5>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button onclick="deleteImage(@item.Id)" class="axil-btn p-3 mb-3 btn-bg-primary" style="width:150px">Delete</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


@model IEnumerable<BridgingAfrica.ProviderServicesTbl>
@{
    ViewBag.Title = "ManageServices";
    Layout = "~/Views/Shared/_Layout.cshtml";

    BridgingAfricaDBEntities db = new BridgingAfricaDBEntities();
    int providerID = int.Parse(Session["P_UserID"].ToString());
    var ProviderName = db.ProviderTbls.Where(p => p.Id == providerID).Select(p => p.ProviderName).FirstOrDefault();
}
<script>  
    function deleteitem(sid) {
        $.ajax({
            url: "/api/ProviderApi/DeleteProviderService?sid=" + sid,
            type: 'POST',
            //headers: {
            //    "Authorization": "Bearer " + Token + ":" + userID
            //},
            contentType: 'application/json',
            beforeSend: function () {
                $("body").mLoading();
            },
            success: function (data) {
                $("body").mLoading('hide');
                if (data.Status == "Success") {
                    alert(data.Message);
                    window.location = "/TradespersonAccount/ManageServices";
                }
                else {
                    alert(data.Message);
                }
            },
            error: function (data) {
                alert(data.Message);
                $("body").mLoading('hide');
            }
        });
    }
</script>
<main class="main-wrapper">
    <!-- Start Breadcrumb Area  -->
    <div class="axil-breadcrumb-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-8">
                    <div class="inner">
                        <ul class="axil-breadcrumb">
                            <li class="axil-breadcrumb-item"><a href="/">Home</a></li>
                            <li class="separator"></li>
                            <li class="axil-breadcrumb-item active" aria-current="page">Your Services List</li>
                        </ul>
                        <h1 class="title">Your Services List</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4">
                    <div class="inner">
                        <div class="bradcrumb-thumb">
                            <img src="/assets/images/logo/logoheader.png" alt="Image" style="height:140px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="axil-dashboard-area mb--80">
        <div class="container">
            <div class="row align-items-center">
                <div class="axil-dashboard-area mt--30">
                    <div class="container">
                        <div class="axil-dashboard-warp">
                            <div class="axil-dashboard-author">
                                <div class="media">
                                    <div class="media-body">
                                        <h5 class="title mb-0">Hello @Session["ProviderName"]</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @Html.Action("_AccountDetail", "TradespersonAccount")
                                <div class="col-xl-9 col-md-8">
                                    @if (TempData["FailMessage"] != null)
                                    {
                                        <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
                                    }
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                                    }
                                    <a class="axil-btn p-3 mb-3 btn-bg-primary" href="/TradespersonAccount/AddService" style="width:150px;"><i class="fa fa-plus"></i> Add New</a>
                                    @if (Model.Count() > 0)
                                    {
                                        <div class="axil-dashboard-order">
                                            <div class="table-responsive" style="border: 1px solid #C0C0C0; border-radius: 5px;">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Category</th>
                                                            <th scope="col">Subcategory</th>
                                                            <th scope="col">Service</th>
                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tbody>
                                                            <tr>
                                                                <td>@item.ServiceTbl.CategoryTbl.CategoryName</td>
                                                                <td>@item.ServiceTbl.SubCategoryTbl.SubCategoryName</td>
                                                                <td>@item.ServiceTbl.ServiceName</td>
                                                                <td>
                                                                    <button data-bs-toggle="modal" data-bs-target="#searchModal-@item.Id" class='axil-btn view-btn'>Delete</button>
                                                                    <div class="modal fade" id="searchModal-@item.Id" tabindex="-1">
                                                                        <div class="modal-dialog">
                                                                            <!-- Modal content-->
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <h5 class="modal-title text-center">Delete Confirmation</h5>
                                                                                    <button type="button" style="width:20px" class="close" data-bs-dismiss="modal">
                                                                                        <i class="fa fa-times"></i>
                                                                                    </button>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <h5 class="mt-5 mb-5">Are you sure you want to delete this service?</h5>
                                                                                </div>
                                                                                <div class="modal-footer">
                                                                                    <button onclick="deleteitem(@item.Id)" class="axil-btn p-3 mb-3 btn-bg-primary" style="width:150px">Delete</button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <h4>No Record Found</h4>
                                    }
                                    <div class="row row--15 mt--50">
                                        <div class="col-xl-12 col-lg-12 col-sm-12 text-center">
                                            <p>Missing a service category? If you need a new category listed send us a message.</p>
                                            <button data-bs-toggle="modal" data-bs-target="#category" style="width:265px" class="axil-btn btn-bg-primary">Request a new category</button>
                                            <div class="modal fade" id="category" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <!-- Modal content-->
                                                    <form method="post" action="/TradespersonAccount/SendRequest">
                                                        @Html.AntiForgeryToken()
                                                        <div class="modal-content">
                                                            <div class="modal-header mb--30">
                                                                <h6 class="modal-title text-center">Send a new category request</h6>
                                                                <button type="button" style="width:20px" class="close" data-bs-dismiss="modal">
                                                                    <i class="fa fa-times"></i>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="row row--10">
                                                                    <div class="col-lg-12 p-3">
                                                                        <input name="RequesterName" type="hidden" value="@ProviderName" />
                                                                        <input name="RequesterType" type="hidden" value="Tradesperson" />
                                                                        <div class="form-group">
                                                                            <label>Category Name</label>
                                                                            <input type="text" name="CategoryName" id="CategoryName" required />
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <label>Message</label>
                                                                            <textarea name="Message" id="Message"></textarea>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="submit" class="axil-btn btn-bg-primary">Submit Request</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

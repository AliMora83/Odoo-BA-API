
@{
    ViewBag.Title = "CustomerRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main-wrapper">
    <!-- Start Blog Area  -->
    <div class="axil-blog-area pt--30 pb--50">
        <div class="post-single-wrapper position-relative pt--20">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-8 col-sm-12 offset-lg-2 offset-xl-2">
                        @if (TempData["FailMessage"] != null)
                        {
                            <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
                        }
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                        }
                        <div class="comment-respond">
                            <h4 class="title">Customer Registration</h4>
                            <form action="/Home/CustomerRegister" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="MobileNo" id="MobileNo" value="@Session["MobileNumber"]" />
                                <input id="PostalCodeID" name="PostalCodeID" type="hidden" value="@Session["AreaID"]" />
                                <input id="AddressLine1" name="AddressLine1" type="hidden" value="@Session["Address1"]" />
                                <input id="AddressLine2" name="AddressLine2" type="hidden" value="@Session["Address2"]" />
                                <p class="comment-notes"><span id="email-notes">Fill basic detail about you.</span></p>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label>First Name</label>
                                            <input name="FirstName" type="text" title="Enter First Name" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Last Name</label>
                                            <input name="LastName" type="text" title="Enter Last Name" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input name="EmailID" type="email" title="Enter Email ID" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-submit">
                                            <button name="submit" type="submit" id="submit" class="axil-btn btn-bg-secondary w-auto">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>



@{
    ViewBag.Title = "GetQuote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main-wrapper">
    <!-- Start Blog Area  -->
    <div class="axil-blog-area pt--30 pb--50">
        <div class="post-single-wrapper position-relative pt--20">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-8 col-sm-12 offset-lg-2 offset-xl-2">   
                        <div class="comment-respond">
                            <h4 class="title">Job Details</h4>
                            <form action="/CustomerAccount/GetQuote" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="ProviderID" id="ProviderID" value="@Request.QueryString["pid"]" />
                                <input type="hidden" name="CustomerID" id="CustomerID" value="@Session["UserID"]" />
                                <input type="hidden" name="ServiceID" id="ServiceID" value="@Request.QueryString["sid"]" />
                                <p class="comment-notes"><span id="email-notes">Write detail about your work.</span></p>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label>Describe your job</label>
                                            <textarea name="JobDetail" placeholder="Describe your job"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>When would you like the job to start?</label>
                                            <select name="WorkerUrgency" required title="When would you like the job to start?">
                                                <option value="">Select a option</option>
                                                <option>I'm flexible on the start date</option>
                                                <option>It's urgent (within 48 hours)</option>
                                                <option>Within 2 weeks</option>
                                                <option>Within 1 month</option>
                                                <option>I'm budgeting / researching</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-submit">
                                            <button name="submit" type="submit" id="submit" class="axil-btn btn-bg-secondary w-auto">Send Message</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


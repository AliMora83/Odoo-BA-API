@model BridgingAfrica.ProviderJobsTbl
@{
    ViewBag.Title = "My Job Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main-wrapper">
    <!-- Start Breadcrumb Area  -->
    <div class="axil-breadcrumb-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-8">
                    <div class="inner">
                        <ul class="axil-breadcrumb">
                            <li class="axil-breadcrumb-item"><a href="/">Home</a></li>
                            <li class="separator"></li>
                            <li class="axil-breadcrumb-item active" aria-current="page">Jobs Details</li>
                        </ul>
                        <h1 class="title">Jobs Details</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4">
                    <div class="inner">
                        <div class="bradcrumb-thumb">
                            <img src="/assets/images/logo/logoheader.png" alt="Image" style="height:140px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="axil-dashboard-area mb--80">
        <div class="container">
            <div class="row align-items-center">
                <div class="axil-dashboard-area mt--30">
                    <div class="container">
                        <div class="axil-dashboard-warp">
                            <div class="axil-dashboard-author">
                                <div class="media">
                                    <div class="media-body">
                                        <h5 class="title mb-0">Hello @Session["CustomerName"]</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @Html.Action("_AccountDetail", "CustomerAccount")
                                <div class="col-xl-9 col-md-8">
                                    <div class="card card-style mb-2">
                                        <div class="page-title page-title-small mt--10 mb--10">
                                            <h4 class="text-center mb--0">Work Details</h4>
                                        </div>
                                    </div>
                                    <div class="card card-style">
                                        <div class="page-title page-title-small text-center">
                                            <p class="text-center mb--0">@Model.ProviderEnquiryTbl.CategoryTbl.CategoryName <i class="fa fa-chevron-circle-right"></i> @Model.ProviderEnquiryTbl.SubCategoryTbl.SubCategoryName</p>
                                            <h5 class="text-center mt-2 mb-1">@Model.ProviderEnquiryTbl.ServiceTbl.ServiceName</h5>
                                            <h5 class="text-center mt-2 mb-2">Amount: <span class="font-400">$@Model.Amount</span></h5>
                                            <h6 class="font-600 mt-2 text-center">
                                                Work: <span class="font-400">@Model.JobDetail</span>
                                            </h6>
                                            @if (Model.StatusID == 4)
                                            {
                                                <h4 class="text-center">This job is completed</h4>
                                                @*<a href="/CustomerAccount/JobInvoicePreview?jobid=@Model.Id" class="axil-btn p-2 btn-bg-primary">View Invoice</a>*@
                                            }
                                        </div>
                                    </div>
                                    <div class="card card-style mt-2 mb-2">
                                        <div class="page-title page-title-small mb-2">
                                            <h4 class="text-center mb--10 mt--10">Tradesperson Information</h4>
                                        </div>
                                    </div>
                                    <div class="card card-style">
                                        <div class="content mb-0 mt-1 pt-2 mb-2 text-center">
                                            <h6 class="font-500 mb-2">@Model.ProviderEnquiryTbl.ProviderTbl.ProviderName</h6>
                                            <h6 class="font-500 mb-2">Contact No: @Model.ProviderEnquiryTbl.ProviderTbl.ContactNo </h6>
                                            <h6 class="font-500">
                                                Address: @Model.ProviderEnquiryTbl.ProviderTbl.PostalCodesTbl.AreaName, @Model.ProviderEnquiryTbl.ProviderTbl.AddressLine1
                                                <br />@Model.ProviderEnquiryTbl.ProviderTbl.AddressLine2
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


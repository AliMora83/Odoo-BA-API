@{
    BridgingAfricaDBEntities db = new BridgingAfricaDBEntities();
    int custID = 0;
    var unread = 0;
    if (Session["UserID"] != null)
    {
        custID = int.Parse(Session["UserID"].ToString());
        unread = db.CustomerNotificationTbls.Count(p => p.CustID == custID && p.Status == false && p.Isactive == true);
    }
}
<div class="col-xl-3 col-md-4">
    <aside class="axil-dashboard-aside">
        <nav class="axil-dashboard-nav">
            <div class="nav nav-tabs" role="tablist">
                <a class="@(ViewBag.CurrentUser=="Dashboard"?"nav-item nav-link active":"nav-item nav-link")" href="/CustomerAccount/"><i class="fas fa-th-large"></i>Dashboard</a>
                <a class="@(ViewBag.CurrentUser=="Profile"?"nav-item nav-link active":"nav-item nav-link")" href="/CustomerAccount/CustomerProfile"><i class="fas fa-user"></i>My Profile</a>
                <a class="@(ViewBag.CurrentUser=="Quotations"?"nav-item nav-link active":"nav-item nav-link")" href="/CustomerAccount/MyQuotations"><i class="fas fa-list"></i>Requests</a>
                <a class="@(ViewBag.CurrentUser=="CancelledQuotations"?"nav-item nav-link active":"nav-item nav-link")" href="/CustomerAccount/CancelledQuotations"><i class="fas fa-list"></i>Cancelled Requests</a>
                <a class="@(ViewBag.CurrentUser=="Messages"?"nav-item nav-link active":"nav-item nav-link")" href="/CustomerAccount/Messages"><i class="fas fa-envelope"></i>Messages @if (unread > 0)
                {<span class="sp-count">@unread</span>}</a>
                <a class="@(ViewBag.CurrentUser=="TradespersonReviews"?"nav-item nav-link active":"nav-item nav-link")" href="/CustomerAccount/TradespersonReviews">
                    <i class="fas fa-star"></i>Tradesperson Reviews
                </a>

        <a class="@(ViewBag.CurrentUser=="Invoices"?"nav-item nav-link active":"nav-item nav-link")" href="/CustomerAccount/MyJobsInvoices"><i class="fas fa-file-invoice"></i>Job Invoices</a>*@
                <a class="@(ViewBag.CurrentUser=="Password"?"nav-item nav-link active":"nav-item nav-link")" href="/Home/Logout"><i class="fas fa-sign-out"></i>Logout</a>
            </div>
        </nav>
    </aside>
</div>


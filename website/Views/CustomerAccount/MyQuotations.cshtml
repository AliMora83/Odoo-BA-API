
@{
    ViewBag.Title = "MyQuotations";
    Layout = "~/Views/Shared/_Layout.cshtml";

    BridgingAfricaDBEntities db = new BridgingAfricaDBEntities();

    int custID = int.Parse(Session["UserID"].ToString());
    var result = db.ProviderEnquiryTbls.Where(a => a.IsActive && a.CustomerID == custID && a.StatusID != 6).Select(c => new { c.Id, c.ProviderID, c.CustomerID, c.ProviderTbl.ProviderName, c.WorkerUrgency, c.ServiceTbl.ServiceName, c.StatusID, c.IsPaid, c.CreatedDate, c.StatusTbl.ColorCode, c.StatusTbl.StatusName, Reviews = c.CustomerReviewsTbls.Count(s => s.IsActive == true) }).OrderByDescending(c => c.Id).ToList();
}
<script>
    function cancelQuotation(qid) {
        $.ajax({
            url: "/api/HomeApi/CancelQuotation?qid=" + qid,
            type: 'POST',
            contentType: 'application/json',
            beforeSend: function () {
                $("body").mLoading();
            },
            success: function (data) {
                $("body").mLoading('hide');
                if (data.Status == "Success") {
                    alert(data.Message);
                    window.location = "/CustomerAccount/MyQuotations";
                }
                else {
                    alert(data.Message);
                }
            },
            error: function (data) {
                alert(data.Message);
                $("body").mLoading('hide');
            }
        });
    }
</script>
<main class="main-wrapper">
    <!-- Start Breadcrumb Area  -->
    <div class="axil-breadcrumb-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-8">
                    <div class="inner">
                        <ul class="axil-breadcrumb">
                            <li class="axil-breadcrumb-item"><a href="/">Home</a></li>
                            <li class="separator"></li>
                            <li class="axil-breadcrumb-item active" aria-current="page">My Requests</li>
                        </ul>
                        <h1 class="title">My Requests</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4">
                    <div class="inner">
                        <div class="bradcrumb-thumb">
                            <img src="/assets/images/logo/logoheader.png" alt="Image" style="height:140px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="axil-dashboard-area mb--80">
        <div class="container">
            <div class="row align-items-center">
                <div class="axil-dashboard-area mt--30">
                    <div class="container">
                        <div class="axil-dashboard-warp">
                            <div class="axil-dashboard-author">
                                <div class="media">
                                    <div class="media-body">
                                        <h5 class="title mb-0">Hello @Session["CustomerName"]</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                @Html.Action("_AccountDetail", "CustomerAccount")
                                <div class="col-xl-9 col-md-8">
                                    @if (TempData["FailMessage"] != null)
                                    {
                                        <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
                                    }
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div id="success-alert" class="alert alert-success text-center mb-3">@TempData["SuccessMessage"]</div>
                                    }
                                    @if (result.Count > 0)
                                    {
                                        <div class="axil-dashboard-order">
                                            <div class="table-responsive" style="border: 1px solid #C0C0C0; border-radius: 5px;">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Tradesperson</th>
                                                            <th scope="col">Urgency</th>
                                                            <th scope="col">Service</th>
                                                            <th scope="col">Status</th>
                                                            <th scope="col">Date</th>
                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    @foreach (var item in result)
                                                    {
                                                        <tbody>
                                                            <tr>
                                                                <td>@item.ProviderName</td>
                                                                <td>@item.WorkerUrgency</td>
                                                                <td>@item.ServiceName</td>
                                                                <td><span style="color:@item.ColorCode">@item.StatusName</span></td>
                                                                <td>@item.CreatedDate.ToString("dd-MMM-yyyy")</td>
                                                                <td>
                                                                    @if (item.StatusID == 1 && item.IsPaid==false)
                                                                    {
                                                                    <button data-bs-toggle="modal" data-bs-target="#searchModal-@item.Id" class='axil-btn view-btn mb-2'>Cancel</button>
                                                                    <div class="modal fade" id="searchModal-@item.Id" tabindex="-1">
                                                                        <div class="modal-dialog">
                                                                            <!-- Modal content-->
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <h5 class="modal-title text-center">Cancel Confirmation</h5>
                                                                                    <button type="button" style="width:20px" class="close" data-bs-dismiss="modal">
                                                                                        <i class="fa fa-times"></i>
                                                                                    </button>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <h5 class="mt-5 mb-5">Are you sure you want to cancel this request?</h5>
                                                                                </div>
                                                                                <div class="modal-footer">
                                                                                    <button onclick="cancelQuotation(@item.Id)" class="axil-btn p-3 mb-3 btn-bg-primary" style="width:150px">Cancel</button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    }
                                                                    @if (item.Reviews > 0)
                                                                    {
                                                                        <a href="/CustomerAccount/review?providerID=@item.ProviderID&qid=@item.Id&custid=@item.CustomerID" class='axil-btn view-btn text-center'>Reviewed</a>
                                                                    }
                                                                    else
                                                                    {
                                                                        if (item.StatusID == 4)
                                                                        {
                                                                            <a href="/CustomerAccount/review?providerID=@item.ProviderID&qid=@item.Id&custid=@item.CustomerID" class='axil-btn view-btn text-center'>Write a reviews</a>
                                                                        }
                                                                    }
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <h4>No Record Found</h4>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</main>


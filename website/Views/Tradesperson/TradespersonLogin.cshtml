
@{
    ViewBag.Title = "Tradesperson Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Contact Area  -->
<div class="axil-contact-page-area axil-section-gap">
    <div class="container">
        <div class="axil-contact-page">
            <div class="row row--30">
                <div class="col-xl-8 col-lg-8 col-sm-12 offset-lg-2 offset-xl-2">
                    @if (TempData["FailMessage"] != null)
                    {
                        <div id="fail-alert" class="alert alert-danger text-center">@TempData["FailMessage"]</div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div id="success-alert" class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                    }
                    <div class="contact-form">
                        <h3 class="title mb--10">Tradesperson Login/Register</h3>
                        <p>login to your account.</p>
                        @if (Session["ContactNo"] == null)
                        {
                            <form method="get" action="/Tradesperson/SendOTP">
                                <div class="row row--10">
                                    <div class="col-lg-12">
                                        <div class="form-group mb--5">
                                            <label for="MobileNo">Mobile Number <span>*</span></label>
                                            <input type="text" id="MobileNo" name="MobileNo" autocomplete="off" required style="font-size:18px" />
                                        </div>
                                    </div>
                                    <div class="col-12 mt--20">
                                        <div class="form-group mb--0">
                                            <button type="submit" class="axil-btn btn-bg-primary">Sent OTP</button>
                                            <p class="mt--20">We will send 6 digit OTP on above mobile number</p>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <form method="get" action="/Tradesperson/VerifyOTP">
                                <div class="row row--10">
                                    <div class="col-lg-12">
                                        <div class="form-group mb--5">
                                            <label for="txtOTP">Enter OTP <span>*</span></label>
                                            <input type="text" id="txtOTP" name="txtOTP" value="@Session["OTP"]" autocomplete="off" required style="font-size:18px" />
                                        </div>
                                    </div>
                                    <div class="col-12 mt--20 mb--20">
                                        <div class="form-group mb--0">
                                            <button type="submit" class="axil-btn btn-bg-primary">Verify OTP</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <hr />
                            <form method="get" action="/Tradesperson/ResendOTP">
                                <button type="submit" class="axil-btn btn-bg-primary">Resend OTP</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Contact Area  -->
